//- a block label with a link
mixin block-label(idText, visibility, display)
  .block-label(style='visibility:#{visibility};display:#{display};')
    a.label(href='#',ng-class='getLabelClass(#{idText})',
    ng-href='#/block/{{#{idText}}}')
      span.block-label {{#{idText}}}&nbsp;
      i.icon-share.icon-white